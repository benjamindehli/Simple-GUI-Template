{
  "name": "quark-gui",
  "version": "0.8.00",
  "description": "Webpack GUI framework based on atomic design",
  "keywords": [
    "atomic",
    "gui",
    "gui-template",
    "gui-toolkit",
    "webpack",
    "responsive",
    "front-end",
    "framework",
    "web",
    "js",
    "sass"
  ],
  "main": "./lib/main.js",
  "types": "./lib/main.d.ts",
  "files": [
    "setup",
    "src/**/*.{ts,js,scss}",
    "src/fonts/**/*.{woff,woff2,eot,svg,ttf}",
    "lib/**/*.{js,d.ts}",
    "LICENSE"
  ],
  "scripts": {
    "build": "rimraf dist && NODE_ENV=production webpack --mode production",
    "dev": "NODE_ENV=development node dev-server.js --mode development",
    "win-build": "rimraf dist && SET NODE_ENV=production&& webpack",
    "win-dev": "SET NODE_ENV=development&& node dev-server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/quarkGUI/quarkGUI.git"
  },
  "author": "Benjamin Dehli <superelg@gmail.com> (https://github.com/benjamindehli)",
  "license": "GPL-3.0",
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss|less)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "globals": {
      "ts-jest": {
        "useBabelrc": true
      }
    }
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.0.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-0": "^6.16.0",
    "compression-webpack-plugin": "^1.0.0",
    "css-loader": "^0.28.0",
    "file-loader": "^1.1.4",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.4.0",
    "node-sass": "^4.5.3",
    "rimraf": "^2.5.4",
    "sass-loader": "^7.0.3",
    "style-loader": "^0.21.0",
    "svg-url-loader": "^2.0.1",
    "ts-loader": "^4.4.1",
    "typescript": "^2.2.0",
    "url-loader": "^1.0.1",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.3",
    "webpack-dev-server": "^3.1.4"
  },
  "bugs": {
    "url": "https://github.com/quarkGUI/quarkGUI/issues"
  },
  "homepage": "https://github.com/quarkGUI/quarkGUI#readme",
  "dependencies": {
    "axios": "^0.18.0",
    "dragula": "^3.7.2"
  }
}
